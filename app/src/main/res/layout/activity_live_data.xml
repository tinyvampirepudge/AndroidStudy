<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jetpack.LiveDataActivity">

    <Button
        android:id="@+id/btn_post_value"
        style="@style/btn_style_lower"
        android:text="postValue丢失数据"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_set_value"
        style="@style/btn_style_lower"
        android:text="set value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_post_value" />

    <Button
        android:id="@+id/btn_set_post_value"
        style="@style/btn_style_lower"
        android:text="set and post value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_value" />

    <Button
        android:id="@+id/btn_post_set_value"
        style="@style/btn_style_lower"
        android:text="post and set value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_post_value" />

    <Button
        android:id="@+id/btn_set_value_invisible"
        style="@style/btn_style_lower"
        android:text="set value invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_post_set_value" />

    <Button
        android:id="@+id/btn_post_value_invisible"
        style="@style/btn_style_lower"
        android:text="post value invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_value_invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>