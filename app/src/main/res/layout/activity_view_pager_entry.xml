<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewpager.ViewPagerEntryActivity">

    <Button
        android:id="@+id/btnViewPagerTest"
        style="@style/btn_style_lower"
        android:text="ViewPager + FragmentPagerAdapter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewPager2Test"
        style="@style/btn_style_lower"
        android:text="ViewPager2 + FragmentPagerAdapter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewPagerTest" />

    <Button
        android:id="@+id/btnViewPager2ViewTest"
        style="@style/btn_style_lower"
        android:text="ViewPager2 + RecyclerView.Adapter + View"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewPager2Test" />

</androidx.constraintlayout.widget.ConstraintLayout>